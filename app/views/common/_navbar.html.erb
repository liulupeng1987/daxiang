<div class="wrapper header-top">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-xs-6">
				<p class="welcome-msg"> 购物满 199 立减 30 </p>
			</div>
			<div class="col-md-8 col-xs-12">
				<ul>
					<li><i class="fa fa-user-circle-o h_i"></i>
						<%= link_to "免费注册", new_user_registration_path %>
					</li>
					<li><i class="fa fa-shopping-bag h_i"></i>
						<%= link_to "我的订单", account_orders_path %>
					</li>
					<li><i class="fa fa-star h_i"></i>
						<%= link_to "投诉建议", new_advice_path %>
					</li>
					<li><i class="fa fa-gift h_i"></i><%= link_to "购物指南", static_pages_guide_path %><</li>
					<li><i class="fa fa-check-circle h_i"></i><%= link_to "关于我们", static_pages_about_path %></li>
					<li><i class="fa fa-phone h_i"></i><%= link_to "客户服务", static_pages_service_path %></li>
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="wrapper header-middle">
<nav class="navbar navbar-default" role="navigation">
	<div class="container">
		<div class="navbar-header">
			<!-- <a class="navbar-brand" href="/">JDStore.4</a> -->
			<a href="/"><%= image_tag("https://image.ibb.co/fpWXTv/logo3.png", style: "width:239px; height: 52px;")  %></a>
		</div>

		<div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<!-- search form -->
				<li>
					<section id="search_section">
					<%= form_tag search_products_path, :method => :get  do %>
						<div class="wrapper">
							<input type="search" name="q" value="<%= params[:q] %>" placeholder="请输入要搜索的信息">
						</div>
					<% end %>
				 </section>
				</li>
				<!-- minicart -->
				<%= render "common/minicart" %>


				  <% if !current_user %>
					  <li><%= link_to("注册", new_user_registration_path) %></li>
					  <li><%= link_to(content_tag(:i, " 登入", class: "fa fa-sign-in"), new_user_session_path) %></li>
				  <% else %>
					  <li class="dropdown">
						  <a class="dropdown-toggle" href="#" data-toggle="dropdown">
							  Hi!, <%= current_user.email %>
							  <b class="caret"></b>
						  </a>
						  <ul class="dropdown-menu">
							<% if current_user.admin? %>
								<li><%= link_to("Admin Panel", admin_products_path) %></li>
							<% end %>
							<li><%= link_to("历史订单", account_orders_path) %></li>
						    <li><%= link_to(content_tag(:i, "登出", class: "fa fa-sign-out"), destroy_user_session_path, method: :delete) %></li>
						  </ul>
					  </li>
				  <% end %>
			</ul>
		</div>

	</div>
</nav>
</div>

<div class="wrapper header-bottom">
	<div class="container">
		<div class="row">
			<div class="col-md-2 col-xs-4 nav-1">
				<%= link_to("产品类别", categories_path) %>
			</div>
			<div class="col-md-2 col-xs-4 nav-2">
				<%= link_to("新品上市", new_arrived_products_path) %>
			</div>
			<div class="col-md-2 col-xs-4 nav-3">
				<%= link_to("订阅我们", new_subscriber_path) %>
			</div>
			<div class="col-md-2 col-xs-4">
				<%= link_to("求买书", new_subscribe_path) %>
			</div>
			<div class="col-md-2 col-xs-4">
				<%= link_to("支付说明", static_pages_payment_path) %>
			</div>
			<div class="col-md-2 col-xs-4">
				<%= link_to("配送说明", static_pages_shipping_path) %>
			</div>
		</div>
	</div>
</div>
